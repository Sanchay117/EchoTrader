generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  
  portfolio Portfolio?
  orders    Order[]
  badges    UserBadge[]
}

model Portfolio {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  cash      Float    @default(100000)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  positions Position[]
  trades    Trade[]
}

model Position {
  id          String    @id @default(uuid())
  portfolioId String
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id])
  symbol      String
  quantity    Int
  avgPrice    Float
  
  @@unique([portfolioId, symbol])
}

model Order {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  symbol      String
  type        String   // MARKET, LIMIT
  side        String   // BUY, SELL
  quantity    Int
  price       Float?   // For LIMIT orders
  status      String   // PENDING, FILLED, CANCELED, REJECTED
  filledQty   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Trade {
  id          String   @id @default(uuid())
  portfolioId String
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id])
  symbol      String
  side        String   // BUY, SELL
  quantity    Int
  price       Float
  timestamp   DateTime @default(now())
}

model UserBadge {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  badgeId   String
  earnedAt  DateTime @default(now())
}
